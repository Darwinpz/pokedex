{{#if error_msg}}

{{#each error_msg}}
<div class="position-fixed end-0 end-0 p-3" style="z-index: 11">
  <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="favicon.ico" class="rounded me-2" alt="logo">
      <strong class="me-auto">InstBmv</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-danger"><strong>
        {{text}}
      </strong>
    </div>
  </div>
</div>
{{/each}}

{{/if}}

{{#if success_msg}}
<div class="position-fixed end-0 end-0 p-3" style="z-index: 11">
  <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="favicon.ico" class="rounded me-2" alt="logo">
      <strong class="me-auto">InstBmv</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-success">
      <strong>
        {{success_msg}}
      </strong>
    </div>
  </div>
</div>
{{/if}}